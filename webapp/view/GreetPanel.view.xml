      headerText="{i18n>panelTitle}"
      class="sapUiResponsiveMargin"
      width="auto">
      <content>
		<Input placeholder="Enter your name" id="name" width="60%"></Input>
		<Button text="Greet" class="sapUiTinyMarginBegin" press=".onGreet"/>
      </content>
   </Panel>
</mvc:View>